{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}





<body>
<center>
<h1 class="text-center col-md-6 mt-50">xSmartFireKiller2000</h1>
        <table class="table col-md-6 mt-50">
            <thead>
            <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Date</th>
                <th scope="col">Temperature</th>
                <th scope="col">Gaz</th>
                <th scope="col">Incident</th>
            </tr>
            </thead>
            <tbody>
    {% for data in data %}
            <tr>
                <th scope="row">{{ data.idData }}</th>
                <th scope="row">{{ data.date|date('d/m/Y') }}</th>
                <td>{{ data.temperature }} °C</td>
                <td>{{ data.gaz }}</td>
                {% if data.incident == 1 %}
                    <th scope="row">Incident</th>
                    <th>
                        <button type="button" class="btn btn-outline-danger">Arrêter l'alarme</button>
                    </th>
                {% else %}
                    <th scope="row">Pas d'incident</th>
                {% endif %}
            </tr>
    {% endfor %}
            </tbody>
        </table>
</center>
</body>






{% endblock %}
